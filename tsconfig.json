{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "noImplicitAny": true,
    "outDir": "./build/",
    "preserveConstEnums": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "baseUrl": "./",
    "paths": {
      "Images/*": ["src/images/*"],
      "Components/*": ["src/components/*"],
      "Styles/*": ["src/globalStyles/*"],
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}

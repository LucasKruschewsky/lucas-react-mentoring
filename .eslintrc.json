{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "tabWidth": 2,
        "semi": true,
        "trailingComma": "es5",
        "singleQuote": true
      }
    ],
    "quotes": [2, "single"],
    "react/jsx-filename-extension": [1, { "extensions": [".js", ".jsx"] }],
    "max-len": [2, { "code": 80 }]
  },
  "settings": {
    "import/resolver": {
      "alias": {
        "map": [
          ["Images", "./src/Images"],
          ["Components", "./src/Components"],
          ["Styles", "./src/GlobalStyles"]
        ],
        "extensions": [".js", ".jsx"]
      }
    }
  }
}
